<?xml version="1.0" encoding="utf-8"?>
<mm.com.mit.rxjavaassignment.views.pods.EmptyViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/lbl_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:paddingLeft="@dimen/empty_favourite_text_padding"
        android:paddingRight="@dimen/empty_favourite_text_padding"
        android:text="@string/msg_default_empty"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:contentDescription="@string/content_description_empty_label"
        />

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lbl_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:src="@drawable/empty_data_placeholder"
        android:contentDescription="@string/content_description_empty_image"
        />

    <Button
        android:id="@+id/btn_action_for_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:visibility="gone"/>

</mm.com.mit.rxjavaassignment.views.pods.EmptyViewPod>